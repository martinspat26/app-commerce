<!DOCTYPE html>
<html lang="en">
	<meta charset="UTF-8">
	<head>
		{% block head %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
			<!-- <link rel="stylesheet" href="style.css"/> -->
			<link rel="stylesheet" type="text/css" href="{{ asset('static/css/home.css') }}"/>
			<title>{% block title %}{% endblock %}Testing Frontend</title>
		{% endblock %}
	</head>

    <body>

        <header>
        <div id="site">
                <div id="logo">
                    <a href="https://javra.com/"><img src="/bundles/pimcoreadmin/img/logojavra2.png" style="width: 200px;"/></a>

                </div>

                <div
                    id="data">
                    {# the first argument is the date format, which defaults to the global date format if null is passed #}
                    {{ "now"|date(null, "Europe/Lisbon") }}
                </div>
            </div>
        </header>

        <div id="content">
            {% block body %}
            {% endblock %}
        </div>
        
    </body>

    <footer>
        {% block footer1 %}
            <div id="footer">
                {% block footer %}
                    <div class="container">
                        <div class="text-center">
                            <div class="row">
                                <div class="col-sm">
                                    {{pimcore_wysiwyg('content')}}
                                </div>
                                <div class="col-sm">
                                    {{pimcore_wysiwyg('content2')}}
                                </div>
                                <div class="col-sm">
                                    {{pimcore_wysiwyg('content3')}}
                                </div>
                            </div>
                        </div>
                    </div>
                    <a href="https://javra.com/">
                    <button>Visit Javra</button>
                    </a>
                    <div class="buttons">
                        <a href="https://javra.com/">Visit Javra</a>
                        <a href="https://javra.com/contact-us/">Contact Us</a>
                        <p>Copyright 2023 Javra Software Â© all rights reserved
                        </p>
                    </div>
                {% endblock %}
            </div>
        {% endblock %}
	</footer>
</html>