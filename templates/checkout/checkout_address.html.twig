{% extends 'layout/patLayout.html.twig' %}

{% block content %}

    <body>

        <h1>Checkout Address Form</h1>
        
        <form method="POST" action="{{ path('shop-checkout-address') }}">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required><br><br>

            <label for="firstName">Firstname:</label>
            <input type="text" id="firstName" name="firstName" required><br><br>

            <label for="lastName">Lastname:</label>
            <input type="text" id="lastName" name="lastName" required><br><br>

            <div class="buttons">
                <a href="/checkout-address" class="btn btn-outline-secondary">Submit</a>
            </div>
        </form>

        <div class="col-md-4 mb-4 mt-5 mt-md-0">
            {% include 'cart/cart_order_summary.html.twig' with {'cart': cart} %}
        </div>

    </body>

{% endblock content%}