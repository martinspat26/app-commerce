{% extends 'layout/patlayout.html.twig' %} {% block content %}
<head>
    <meta charset="UTF-8" />
    <title>Trip and Fun</title>
    <link
        rel="stylesheet"
        type="text/css"
        href="{{ asset('static/css/cart.css') }}"
    />
</head>

<section class="section-grey">
    <p class="title text-center my-0">Wishlist</p>
    <p class="text-secondary text-center subtitle my-0 mb-2">
        Não guarde para depois, o que pode comprar agora. Usufrua das nossas ofertas exclusivas.
    </p>
    <div class="row">
        <div class="column-left my-2">
            <p class="my-1 cart-title">Experiências guardadas na sua Wishlist:</p>
            {% for product in products %}
            <div class="card shadow-sm card-cart p-2 my-2">
                <div class="row align-items-center">
                    <div class="col">
                        <p class="card-title font-weight-bold m-1">
                            {{ product.name }}
                        </p>
                    </div>
                    <div><a href="/cartadd?id={{product.id}}"><button class="btn btn-default orange-button"> ADICIONAR NO CARRINHO <i class="fa-solid fa-cart-shopping"></i></button></a></div>
                    <div class="col text-right">
                        <p class="subtitle my-1 mx-1">
                            <a
                                href="/wishlistremove?id={{ product.id }}"
                                class="text-secondary"
                                ><i class="fa-solid fa-trash-can"></i
                            ></a>
                        </p>
                    </div>
                </div>

                {# <div class="row align-items-center">
                    <div class="col">
                        <p
                            class="subtitle text-secondary m-1"
                            style="white-space: nowrap"
                        >
                            Quantidade: {{ product.count }}
                        </p>
                    </div>
                    <div class="col text-right">
                        <p class="subtitle mt-3 mb-0 mx-3 font-weight-bold">
                            {{ product.price }} X {{ product.count }}
                        </p>
                    </div>
                </div> #}
            </div>

            {% endfor %}
        </div>
    </div>
</section>

<section class="section-grey">
    <p class="section-title mt-3">
        Compre suas experiências de forma fácil e segura
    </p>
    <p class="section-text mt-3">
        <i class="fa-solid fa-arrow-rotate-left"></i> Cancelamento gratuito em
        30 dias
    </p>
    <hr />
    <p class="section-text mt-3">
        <i class="fa-solid fa-credit-card"></i> Métodos de pagamento
        convenientes
    </p>
    <hr />
    <p class="section-text mt-3">
        <i class="fa-solid fa-envelope-open-text"></i> Envio do voucher por
        e-mail
    </p>
</section>
{% endblock %}