{% extends 'layout/patLayout.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}


{% block content %}


<head>
    <meta charset="UTF-8" />
    <title>Trip and Fun</title>
    <link
        rel="stylesheet"
        type="text/css"
        href="{{ asset('static/css/login.css') }}"
    />
</head>

<section class="section-grey">
    <p class="title text-center my-0">Registo</p>
    <p class="text-secondary text-center subtitle my-0 mb-2">
        Crie sua conta na Trip & Fun.
    </p>

    <div class="my-2 container">
         <div class="login-card card shadow-sm my-2 text-center">
            <form>
                {{ form_start(form) }}
                <div class="form-group">
                    <label for="Email">E-mail</label>
                    {{ form_widget(form.email, { 'attr': {'placeholder': 'email@address.com', 'class': 'form-control', 'type': 'email'}}) }}
                    <label for="firstname">Nome</label>
                    {{ form_widget(form.firstname, { 'attr': {'placeholder': 'Nome', 'class': 'form-control', 'type': 'text'}}) }}
                    <label for="lastname">Apelido</label>
                    {{ form_widget(form.lastname, { 'attr': {'placeholder': 'Apelido', 'class': 'form-control', 'type': 'text'}}) }}
                    <label for="Password">Senha</label>
                    {{ form_widget(form.password, { 'attr': {'placeholder': 'Password', 'class': 'form-control', 'type': 'password'}}) }}
                  </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="form-group form-check">
                  {{ form_widget(form.newsletter, { 'attr': {'placeholder': 'Newsletter', 'class': 'form-check-input', 'type': 'checkbox'}}) }}
                </div>
                <div class="form-group form-check">
                {{ form_widget(form.profiling, { 'attr': {'placeholder': 'Newsletter', 'class': 'form-check-input', 'type': 'checkbox'}}) }}
                </div>
                {{ form_row(form._submit, {'attr': {'class': 'btn orange-button orange-button-100 my-3', 'type': 'submit'}}) }}
                {{ form_end(form) }}
              </form>
        </div>

    </div>
</section>




{% endblock %}