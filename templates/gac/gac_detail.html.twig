{% extends 'layout/patLayout.html.twig' %}

{% block content %}
    <div class="breadcrumbs">
        <ol>
            <li><a href="/gac-listing">GAC List</a></li>
            {% if(gac.name) %}
                <li>{{ gac.name }}</li>
            {% else %}
                <li>{{ gac.description }}</li>
            {% endif %}
        </ol>
    </div>
    <form method="post" action="">
        <div class="container">
            <a href="#" class="expandir-imagem">
            {% if gac.images %}
                {% set mainImage = gac.images|first %}
                <img src="{{ mainImage }}" alt="Imagem" height="400px" width="400px">
            {% else %}
                <img src="static/images/noimage.jpg" alt="Imagem" height="100%" width="100%">
            {% endif %}
            </a>
            <div class="text">
                <h2>{{ gac.description }}</h2>
                <p>{{ gac.name }}</p>
                <p><b>Status:</b></p>
                <p><b>Sync Force Project:</b></p>
                <p><b>Planner:</b> </p>
                <p><b>Stocking Type:</b></p>
                <div class="bottom">
                    <p class="color"><b>Color:</b></p>
                </div>
            </div>
        </div>
        <div class="imagens-menores">
            {% set gallery = gac.images %}
            {% for image in gallery %}
                <input type="hidden" name="images[]" value="{{ image }}">
                {% if not loop.first %}
                    <div class="imagem-menor">
                        <img src="{{ image }}" alt="Imagem">
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        <hr>
        <h2>Additional Information</h2>
        <div class="nav justify-content-center text-center">
            <a class="nav-link" data-toggle="tab" href="#tab1" role="tab"><b>Main Data</b></a>
            <a class="nav-link" data-toggle="tab" href="#tab2" role="tab"><b>Description</b></a>
            <a class="nav-link" data-toggle="tab" href="#tab3" role="tab"><b>Planning</b></a>
            <a class="nav-link" data-toggle="tab" href="#tab4" role="tab"><b>Branch Plant</b></a>
            <a class="nav-link" data-toggle="tab" href="#tab5" role="tab"><b>Customer (GS1)</b></a>
            <a class="nav-link" data-toggle="tab" href="#tab6" role="tab"><b>UOM</b></a>
            <a class="nav-link" data-toggle="tab" href="#tab7" role="tab"><b>Extra Item Info</b></a>
            <a class="nav-link" data-toggle="tab" href="#tab8" role="tab"><b>Assorti Content</b></a>
            <a class="nav-link" data-toggle="tab" href="#tab9" role="tab"><b>B2C Texts</b></a>
        </div>
        <div class="tab-content">
            
           
        </div>
    </form>

    <div class="modal fade" id="imagemModal" tabindex="-1" role="dialog" aria-labelledby="imagemModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <div class="modal-body">
                    <img src="" alt="Imagem" class="imagem-modal" style="max-height: auto; max-width: auto;">
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function() {
        $('.expandir-imagem').click(function(event) {
            event.preventDefault(); 
            var image = $(this).find('img').attr('src'); 
            $('#imagemModal').find('.imagem-modal').attr('src', image);
            $('#imagemModal').modal('show');
        });
        });

        $(document).ready(function() {
        $('.imagem-menor').click(function(event) {
            event.preventDefault(); 
            var image = $(this).find('img').attr('src'); 
            $('#imagemModal').find('.imagem-modal').attr('src', image); 
            $('#imagemModal').modal('show'); 
        });
        });

        var tabs = document.querySelectorAll('.nav-link');
        tabs.forEach(function(tab) {
        var title = tab.querySelector('.nav-link');
        title.addEventListener('click', function() {
            // remover a classe "active" de todas as tabs
            tabs.forEach(function(tab) {
            tab.querySelector('.nav-link').classList.remove('active');
            });
            // adicionar a classe "active" apenas na tab clicada
            title.classList.add('active');
        });
        });


        var tabs = document.querySelectorAll('.nav-link');
        tabs.forEach(function(tab) {
        var title = tab.querySelector('.nav-link');
        title.addEventListener('click', function() {
            // remover a classe "active" de todas as tabs
            tabs.forEach(function(tab) {
            tab.querySelector('.nav-link').classList.remove('active');
            });
            // adicionar a classe "active" apenas na tab clicada
            title.classList.add('active');
        });
        });

    </script>
{% endblock %}